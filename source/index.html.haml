.row.margin-bottom-m.img-panel{"data-equalizer" => ""}
    .large-8.columns{"data-equalizer-watch" => ""}
        %h1 Announcements
        - data.announcements.each do |a|
            %h4 
                = a["title"]
            %h5
                = a["subtitle"]
            %p
                = a["description"]
        %button.button View Past Announcements
    .large-4.columns{"data-equalizer-watch" => ""}
        %img{:src => "http://loremflickr.com/1000/650"}
.row.margin-bottom-m
    .large-6.columns
        %h1 Upcoming Events
        %h4 Week 0
        %ul
            - (1..5).each do |i|
                %li #{lorem.sentence}
        %p
            Check out our 
            %a{:href => "/"} calendar 
            for more upcoming events!
    .large-6.columns
        %h1 Join our mailing list!
        %input{:type => "text", :placeholder => "email"}
        %button.button Submit
